<%- model_class = Pupil -%>
<div class="page-header">
  <h1><%=t '.title', :default => Pupil %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:school) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.school %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:class_form) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.class_form %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:telephone_number) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.telephone_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:emergency_contact_name) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.emergency_contact_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:emergency_contact_relationship) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.emergency_contact_relationship %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:emergency_contact_telephone) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.emergency_contact_telephone %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:previous_dancing_schools) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.previous_dancing_schools %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:most_recent_examination_taken) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.most_recent_examination_taken %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:exam_result) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.exam_result %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:medical_conditions) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.medical_conditions %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:first_name) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.first_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:last_name) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.last_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:birthday) %></dt>
      <dd><pre class="prettyprint"><%= @pupil.birthday %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pupils_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pupil_path(@pupil), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pupil_path(@pupil),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

