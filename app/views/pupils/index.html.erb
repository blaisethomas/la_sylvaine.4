<%- model_class = Pupil -%>
<div class="page-header">
  <h1><%=t '.title', :default => Pupil %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:school) %></th>
      <th><%= model_class.human_attribute_name(:class_form) %></th>
      <th><%= model_class.human_attribute_name(:telephone_number) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:emergency_contact_name) %></th>
      <th><%= model_class.human_attribute_name(:emergency_contact_relationship) %></th>
      <th><%= model_class.human_attribute_name(:emergency_contact_telephone) %></th>
      <th><%= model_class.human_attribute_name(:previous_dancing_schools) %></th>
      <th><%= model_class.human_attribute_name(:most_recent_examination_taken) %></th>
      <th><%= model_class.human_attribute_name(:exam_result) %></th>
      <th><%= model_class.human_attribute_name(:medical_conditions) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:birthday) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pupils.each do |pupil| %>
      <tr>
        <td><%= pupil.id %></td>
        <td><%= pupil.school %></td>
        <td><%= pupil.class_form %></td>
        <td><%= pupil.telephone_number %></td>
        <td><%= pupil.email %></td>
        <td><%= pupil.emergency_contact_name %></td>
        <td><%= pupil.emergency_contact_relationship %></td>
        <td><%= pupil.emergency_contact_telephone %></td>
        <td><%= pupil.previous_dancing_schools %></td>
        <td><%= pupil.most_recent_examination_taken %></td>
        <td><%= pupil.exam_result %></td>
        <td><%= pupil.medical_conditions %></td>
        <td><%= pupil.first_name %></td>
        <td><%= pupil.last_name %></td>
        <td><%= pupil.birthday %></td>
        <td><%=l pupil.created_at, format: :long %></td>
        <td>
          <%= link_to pupil_path(pupil), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to pupil_path(pupil), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pupil_path,
            :class => 'btn btn-primary' %>
