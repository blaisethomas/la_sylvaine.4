<%- model_class = PupilHasLesson -%>
<div class="page-header">
  <h1><%=t '.title', :default => PupilHasLesson %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:adjusted_price) %></dt>
      <dd><pre class="prettyprint"><%= @pupil_has_lesson.adjusted_price %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              pupil_has_lessons_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pupil_has_lesson_path(@pupil_has_lesson), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pupil_has_lesson_path(@pupil_has_lesson),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

